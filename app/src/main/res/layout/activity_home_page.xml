<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        android:background="@color/colorPrimary"
        android:weightSum="100">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerHomePage"
            style="@style/HomePageMenyBar"
            android:layout_weight="75"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile"
            android:id="@+id/circleView"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:weightSum="100"
        android:background="@color/colorPrimaryLight1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Profile_button"
            android:layout_weight="20"
            android:background="@drawable/border"
            android:text="Profile"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimaryLight1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Search_Button"
            android:layout_weight="20"
            android:background="@drawable/border"
            android:text="Search"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:backgroundTint="@color/colorPrimaryLight" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/My_Career_Center_Button"
            android:layout_weight="20"
            android:background="@drawable/border"
            style="@style/Widget.AppCompat.Button"
            android:text="My Career Center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:backgroundTint="@color/colorPrimaryLight1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Resources_Button"
            android:layout_weight="20"
            android:background="@drawable/border"
            android:text="Resources"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:backgroundTint="@color/colorPrimaryLight" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Settings_Button"
            android:layout_weight="20"
            android:background="@drawable/border"
            android:text="Settings"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:backgroundTint="@color/colorPrimaryLight1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryLight1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Upcoming Events"
            style="@style/HomePageMenyBar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="45"
        android:background="@color/colorPrimaryLight1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Latests Job Posts"
            style="@style/HomePageMenyBar"/>
    </LinearLayout>



</LinearLayout>